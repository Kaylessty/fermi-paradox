<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.ConfigScreenController">
   <children>
      <VBox prefHeight="400.0" prefWidth="608.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="27.0" prefWidth="116.0" text="Enter your Name:">
                     <font>
                        <Font name="Lao MN" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameEntry" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="30.0" prefWidth="133.0" text="Select the difficulty:">
                     <font>
                        <Font name="Lao MN" size="13.0" />
                     </font>
                  </Label>
                  <RadioButton fx:id="easy" mnemonicParsing="false" prefHeight="30.0" prefWidth="92.0" text="Easy">
                     <toggleGroup>
                        <ToggleGroup fx:id="difficulties" />
                     </toggleGroup>
                     <font>
                        <Font name="Lao MN" size="13.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="amateur" mnemonicParsing="false" prefHeight="30.0" prefWidth="92.0" text="Amateur" toggleGroup="$difficulties">
                     <font>
                        <Font name="Lao MN" size="13.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="hard" mnemonicParsing="false" prefHeight="30.0" prefWidth="92.0" text="Hard" toggleGroup="$difficulties">
                     <font>
                        <Font name="Lao MN" size="13.0" />
                     </font>
                  </RadioButton>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="27.0" prefWidth="185.0" text="Select your starting weapon:">
                     <font>
                        <Font name="Lao MN" size="13.0" />
                     </font>
                  </Label>
                  <RadioButton fx:id="blaster" mnemonicParsing="false" prefHeight="30.0" prefWidth="106.0" text="Blaster">
                     <font>
                        <Font name="Lao MN" size="13.0" />
                     </font>
                     <toggleGroup>
                        <ToggleGroup fx:id="weapons" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="spaceSword" mnemonicParsing="false" prefHeight="30.0" prefWidth="106.0" text="Space Sword" toggleGroup="$weapons">
                     <font>
                        <Font name="Lao MN" size="13.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="sonarGun" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Sonar Gun" toggleGroup="$weapons">
                     <font>
                        <Font name="Lao MN" size="13.0" />
                     </font>
                  </RadioButton>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="continueButton" mnemonicParsing="false" onAction="#startGame" text="Continue">
                     <font>
                        <Font name="Lao MN" size="13.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
